<h1>My Tasks</h1>



<% @tasks.each do |task| %>
<div>
  <input type="checkbox" id="<%= task.id %>" <%= 'checked' if task.completed == true %> >
  <label for="<%= task.id %>"><%= link_to task.title, task_path(task)%></label>
  <%= link_to task_path(task),method: :delete, data: {confirm: "Are you sure?"} do  %>
    <i class="fas fa-trash-alt ml-2"></i>
  <% end %>
</div>
  <% end %>

<div>
  <%= link_to new_path do  %>
    <i class="fas fa-plus-square mr-2"></i>Add a new task
  <% end %>
</div>


